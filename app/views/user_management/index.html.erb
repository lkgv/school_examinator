<div id="columns">

  <div id="side">
    <ul>
      <li><%= link_to('首页', home_index_path) %></li>
      <% if current_user %>
        <li ><%= link_to '班级', class_orgs_path %></li>
      <% end %>
      <% if current_user && current_user.admin? %>
        <li><%= link_to '考核项', exam_items_path %></li>
        <li><%= link_to '用户管理', user_management_index_path %></li>
      <% end %>
    </ul>

    <ul>
      <% if current_user %>
        <li><%= link_to('修改信息', edit_registration_path(:user)) %></li>
        <li><%= link_to('登出', destroy_user_session_path, :method => :delete) %></li>
      <% else %>
        <li><%= link_to('注册', new_registration_path(:user)) %></li>
        <li><%= link_to('登入', new_session_path(:user)) %></li>
      <% end %>
    </ul>
  </div>

  <div id="main">
    <p id="notice"><%= notice %></p>

    <h1>用户列表</h1>

    <table>
      <thead>
        <tr>
          <th>用户名</th>
          <th>姓名</th>
          <th>权限</th>
          <th>手机号码</th>
          <th>得分</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @users.each do |user| %>
          <tr>
            <td><%= user.username %></td>
            <td><%= user.name %></td>
            <td><%= user.role_cn %></td>
            <td><%= user.phone %></td>
            <td><%= user.score %></td>
          </tr>
        <% end %>
      </tbody>
    </table>

    <br>
  </div>
</div>