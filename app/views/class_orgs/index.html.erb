<div id="columns">
  <div id="side">
    <ul>
      <% @class_orgs.each do |class_org| %>
        <li><%= link_to(class_org.description, class_org) %> </li>
      <% end %>
    </ul>
  </div>

  <div id="main">
    <p id="notice"><%= notice %></p>

    <h1>班级</h1>

    <table>
      <thead>
        <tr>
          <th>教师</th>
          <th>年级</th>
          <th>班号</th>
          <th>初始分数</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @class_orgs.each do |class_org| %>
          <tr>
            <td><%= class_org.user.name %></td>
            <td><%= class_org.grade_cn %></td>
            <td><%= class_org.number %></td>
            <td><%= class_org.score %></td>
            <td><%= link_to '详细信息', class_org %></td>
            <td><%= link_to '编辑', edit_class_org_path(class_org) %></td>
            <% if current_user && current_user.admin? %>
              <td><%= link_to '删除', class_org, method: :delete, data: { confirm: 'Are you sure?' } %></td>
            <% end %>
          </tr>
        <% end %>
      </tbody>
    </table>

    <br>

    <%= link_to '新建班级', new_class_org_path %>
  </div>
</div>